@model IQueryable<Product>



<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">

                <div class="container">
                    <div class="row">
                        <div class="col heading1 margin_0">
                            Products
                        </div>
                        <div class="col d-flex justify-content-center">
                            <a class="btn btn-success" type="button" asp-controller="Product" asp-action="Create">Create</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>Product Name</th>
                            <th>Status</th>
                            <th>Description</th>
                            <th>Showcase</th>
                            <th>Price</th>
                            <th>Color</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>
                                <td>@item.ProductId</td>

                                <td>
                                    <img class="border border-light rounded" src="@item?.ImageUrl" alt="@item?.ProductName"
                                         width="150" />
                                </td>
                                <td>@item.ProductName</td>
                                <td>@item.Status</td>
                                <td>@item.Description</td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input type="checkbox" class="form-check-input" checked="@item.ShowCase" disabled="disabled" />
                                    </div>
                                </td>
                                <td>@item.Price.Value.ToString("C0")</td>

                                <td>@item.Color.Name</td>
                                <td>

                                    <div class="btn-group">
                                        <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning"
                                           asp-action="Update" asp-route-id="@item.ProductId">
                                            <i class="fa fa-edit"></i>
                                        </a>

                                        @* <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger"
                                    asp-action="Delete" asp-route-id="@item.ProductId">
                                    <i class="fa fa-trash"></i>
                                    </a> *@
                                        <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId"
                                           class="btn btn-dark">Delete</a>

                                        <a data-toggle="tooltip" data-placement="top" title="Web" class="btn btn-info"
                                           target="_blank" asp-area="" asp-controller="Product" asp-action="Get"
                                           asp-route-id="@item.ProductId">
                                            <i class="fa fa-search"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


