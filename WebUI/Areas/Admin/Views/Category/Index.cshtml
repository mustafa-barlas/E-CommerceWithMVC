@model IEnumerable<Category>


<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">

                <div class="container">
                    <div class="row">
                        <div class="col heading1 margin_0">
                            Categories
                        </div>
                        <div class="col d-flex justify-content-end">
                            <a class="btn btn-success" type="button" asp-area="Admin" asp-controller="Category" asp-action="Create">Create</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category item in Model)
                        {


                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <img class="border border-light rounded" src="@item?.ImageUrl" alt="@item?.ImageUrl"
                                         width="150" />
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>


                                <td>
                                    <div class="btn-group">
                                        <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning"
                                           asp-action="Update" asp-route-id="@item.Id">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger"
                                           asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                        @*  <a data-toggle="tooltip" data-placement="top" title="Web" class="btn btn-info"
                                    target="_blank" asp-area="" asp-controller="Category" asp-action="Get"
                                    asp-route-id="@item.Id">
                                    <i class="fa fa-search"></i>
                                    </a> *@
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


