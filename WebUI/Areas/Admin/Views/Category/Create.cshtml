@model CategoryDtoForInsertion

<div class="text-center">
    <div class="display-6">Create Category</div>
</div>

<form method="post" asp-action="Create" asp-controller="Category" asp-area="Admin" enctype="multipart/form-data">


    <div class="form-group my-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control" />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Save
            </button>
            <a asp-action="Index" asp-controller="Category"  class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Categories
            </a>
        </div>
    </div>
</form>