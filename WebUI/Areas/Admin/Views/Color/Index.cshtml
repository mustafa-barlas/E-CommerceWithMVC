@model List<Color>

@{
    ViewBag.Title = "Colors";

}


<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">

                <div class="container">
                    <div class="row">
                        <div class="col heading1 margin_0">
                            Colors
                        </div>
                        <div class="col d-flex justify-content-center">
                            <a class="btn btn-success" type="button " asp-controller="Color" asp-action="Create">Create</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>
                                <td>@item.Id</td>

                                <td>@item.Name</td>

                                <td>@item.Status</td>

                                <td>

                                    <div class="btn-group">
                                        <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning"
                                           asp-action="Update" asp-controller="Color" asp-route-id="@item.Id">
                                            <i class="fa fa-edit"></i>
                                        </a>

                                        <a href="#" onclick="DeleteColor(@item.Id);"
                                           class="btn btn-dark">Delete</a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


