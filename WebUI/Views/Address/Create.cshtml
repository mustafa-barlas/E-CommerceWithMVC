@model AddressDtoForInsertion


@{
    ViewBag.Title = "Create Address";
}


<body class="animsition">

    <!-- Header -->
    <header class="header-v4">
        <!-- Header desktop -->
        <div class="container-menu-desktop">
            <!-- Topbar -->



        </div>

        <!-- Header Mobile -->
        <!-- Menu Mobile -->
        <!-- Modal Search -->

    </header>

    <!-- Cart -->
    <!-- Product -->
    <div class="bg0 m-t-23 p-b-140">
        <div class="container">
            <div class="text-center" asp-validation-summary="ModelOnly"></div>

            <form method="post" asp-action="Create" asp-controller="Address">
                <div class="form-group my-3">
                    <label asp-for="Title"></label>
                    <input class="form-control" asp-for="Title">
                </div>
                
                <div class="form-group my-3">
                    <label asp-for="PhoneNumber"></label>
                    <input class="form-control" asp-for="PhoneNumber">
                </div>

                <div class="form-group my-3">
                    <label asp-for="CityId"></label>
                    <select class="form-control" asp-items="@ViewBag.Cities" asp-for="CityId"></select>
                </div>

                <div class="form-group my-3">
                    <label asp-for="District"></label>
                    <input class="form-control" asp-for="District">
                </div>

                <div class="form-group my-3">
                    <label asp-for="Street"></label>
                    <input class="form-control" asp-for="Street">
                </div>
                <div class="form-group my-3">
                    <label asp-for="DetailedAddress"></label>
                    <input class="form-control" asp-for="DetailedAddress">
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        Add Address
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
